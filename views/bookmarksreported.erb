<!DOCTYPE html>
<html lang="en">

<!--Avoiding Duplicated code -->

<%= erb :headinclude, :locals => {:title => "Comment Audit - Admin"} %>

<body>
<!-- Navbar -->

<%= erb :header %>

<!-- modal-section -->

<!-- dashboard section -->
<section class="dashboard-section container py-5">
  <div class="saved-bookmarks">
    <div class="mb-3">
      <h4>Reported bookmarks</h4>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-bookmark">
      <thead>
      <tr>
        <th>Bookmark ID</th>
        <th>User ID</th>
        <th>Bookmark Name</th>
        <th>URL</th>
        <th>Amount reported</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody><% log = @db.get_bookmark_reports() %>
      <% i = 0 %>
      <% log.each do |item| %>
        <tr>
          <td>
            <%= h item[0]%>
          </td>
          <td>
            <%= h item[1]%>
          </td>
          <td>
            <%= h item[2] %>
          </td>
          <td>
            <%= h item[3]%>
          </td>
          <td>
            <%= @db.get_total_reports(item[0].to_i)[0][0] %>
          </td>
          <td width="100">
            <a href="/admin/audit/bookmarks/reported/remove/<%= h item[4]%>"><svg class="bi bi-archive" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M2 5v7.5c0 .864.642 1.5 1.357 1.5h9.286c.715 0 1.357-.636 1.357-1.5V5h1v7.5c0 1.345-1.021 2.5-2.357 2.5H3.357C2.021 15 1 13.845 1 12.5V5h1z" clip-rule="evenodd"/>
              <path fill-rule="evenodd" d="M5.5 7.5A.5.5 0 016 7h4a.5.5 0 010 1H6a.5.5 0 01-.5-.5zM15 2H1v2h14V2zM1 1a1 1 0 00-1 1v2a1 1 0 001 1h14a1 1 0 001-1V2a1 1 0 00-1-1H1z" clip-rule="evenodd"/>
            </svg></a>
          </td>
        </tr>
        <% i= i+ 1%>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</section>

<%= erb :footer %>

<script src="/js/main.js"></script>
<script src="/js/common.js"></script>
</body>

</html>
