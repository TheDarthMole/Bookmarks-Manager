<!DOCTYPE html>
<html lang="en">

<!--Avoiding Duplicated code -->

    <%= erb :headinclude, :locals => {:title => "Audit - Admin"} %>

<body>
    <!-- Navbar -->
    
    <%= erb :header %>
    
    <!-- modal-section -->

    <!-- dashboard section -->
    <section class="dashboard-section container py-5">
        <div class="saved-bookmarks">
            <div class="mb-3">
                <h2>Audit Log</h2>
            </div>
          <div class="mb-2">
            <a href="audit/comments"> <h6>Comments - Reported</h6></a> <a href="audit/bookmarks"> <h6>Bookmarks - Reported</h6></a>
          </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bookmark">
                    <thead>
                        <tr>
                            <th>User ID </th>
                            <th>Action</th>
                            <th>Affected</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody><% log = view_audit_log(1) %>
                            <% log.each do |item| %>
                        <tr>
                            <td>
                                <%= h item[0]%>
                            </td>
                            <td>
                                
                                <%= h item[3]%>
                            </td>
                            <td>
                                
                                <%= h item[1]%>
                            </td>
                            <td>

                                <%= h Time.at(item[2])%>
                            </td>
                            
                        </tr>
                          <% end %>
                    </tbody>
                </table>
            </div>
            <nav class="d-flex align-items-center mb-3 justify-content-end flex-wrap">
                <p class="mb-md-0 font-sm text-muted mr-3">Showing entries
                  <% if params[:page] == nil then
                         y = 1000
                     else y = 1000
                     end
                     x = 10*y
                total = total_audit_results %>
                  <%= h (if (x < total) then x else total end) %> of <%= h total %></p>
                <ul class="pagination mb-md-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a> 
                    </li>
                </ul> 
            </nav>
        </div>
    </section>

    <%= erb :footer %>

    <script src="/js/main.js"></script>
    <script src="/js/common.js"></script>
</body>

</html>
